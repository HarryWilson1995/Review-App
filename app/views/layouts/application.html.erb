<!DOCTYPE html>
<html>
  <head>
    <title>LingoRater</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav>
    <h1>LingoRater</h1>
      <%if logged_in?%>
      <div>
      <button class="navBtn"><%=link_to "#{current_user_username}", user_path(current_user)%></button>
      <button class="navBtn"><%=link_to "Courses", courses_path%></button>
      <button class="navBtn"><%=link_to "Courses", courses_path%></button>
      <button class="navBtn"><%=link_to "Authors", authors_path%></button>
      <button class="navBtn"><%=link_to "Languages", languages_path%></button>
      <button class="navBtn"><%=link_to "Users", users_path%></button>
      <button class="navBtn"><%=link_to "Log Out", logout_path, method:'post', action:'destroy'%></button>
      <%end%>
      </div>
      <%if !logged_in?%>
      <div>
      <button class="navBtn"><%=link_to "Sign Up", signup_path%></button>
      <button class="navBtn"><%=link_to "Log In", login_path%></button>
      <%end%>
      </div>
    </nav>
    <%= yield %>
  </body>
</html>
