<!DOCTYPE html>
<html>
  <head>
    <title>LingoRater</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  
  </head>

  <body>
   <%if logged_in?%>
    <nav>
    <h1>LingoRater</h1>
     
      <div class="navElements">
      <%=link_to "#{current_user_username}", user_path(current_user)%></>
      <%=link_to "Create Review", new_course_path%></>
      <%=link_to "Courses", courses_path%></>
      <%=link_to "Publishers", authors_path%></>
      <%=link_to "Languages", languages_path%></>
      <%=link_to "Log Out", logout_path, method:'post', action:'destroy'%></>
      </div>
    </nav>
    <%end %>
    <%= yield %>
    <script src="https://kit.fontawesome.com/7e5d4c6769.js" crossorigin="anonymous"></script>
  </body>
</html>
